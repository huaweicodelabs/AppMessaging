<?xml version="1.0" encoding="utf-8"?>
<com.huawei.agconnect.appmessaging.display.layout.HAMFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/agc_iam_picture_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/agc_iam_close" />

        <com.huawei.agconnect.appmessaging.display.layout.SquareImageView
            android:id="@+id/agc_iam_picture_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/agc_iam_picture_close"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/agc_iam_picture" />
    </RelativeLayout>
</com.huawei.agconnect.appmessaging.display.layout.HAMFrameLayout>